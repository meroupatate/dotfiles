# Focus Space - Create it if it does not exist yet
alt - 0x12 : yabai -m space --focus 1 || yabai -m space --create && yabai -m space --focus 1
alt - 0x13 : yabai -m space --focus 2 || yabai -m space --create && yabai -m space --focus 2
alt - 0x14 : yabai -m space --focus 3 || yabai -m space --create && yabai -m space --focus 3
alt - 0x15 : yabai -m space --focus 4 || yabai -m space --create && yabai -m space --focus 4
alt - 0x16 : yabai -m space --focus 5 || yabai -m space --create && yabai -m space --focus 5
alt - 0x17 : yabai -m space --focus 6 || yabai -m space --create && yabai -m space --focus 6
alt - 0x18 : yabai -m space --focus 7 || yabai -m space --create && yabai -m space --focus 7

# Move window to space and focus space
alt + ctrl - 0x12 : yabai -m window --space 1 && yabai -m space --focus 1
alt + ctrl - 0x13 : yabai -m window --space 2 && yabai -m space --focus 2
alt + ctrl - 0x14 : yabai -m window --space 3 && yabai -m space --focus 3
alt + ctrl - 0x15 : yabai -m window --space 4 && yabai -m space --focus 4
alt + ctrl - 0x16 : yabai -m window --space 5 && yabai -m space --focus 5
alt + ctrl - 0x17 : yabai -m window --space 6 && yabai -m space --focus 6
alt + ctrl - 0x18 : yabai -m window --space 7 && yabai -m space --focus 7

# Move window in space
alt + ctrl - left : yabai -m window --warp west
alt + ctrl - right : yabai -m window --warp east
alt + ctrl - up : yabai -m window --warp north
alt + ctrl - down : yabai -m window --warp south

# Navigate between windows
alt - left : yabai -m window --focus west
alt - down : yabai -m window --focus south
alt - up : yabai -m window --focus north
alt - right : yabai -m window --focus east

# Toggle fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen
alt + shift - f : yabai -m window --toggle native-fullscreen

# Start Applications
cmd - return : open -a "iTerm"
alt - w : open -a "Google Chrome" 
alt - c : open -a "Visual Studio Code"
alt - h : open ~/.skhdrc
